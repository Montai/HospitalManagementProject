.row
  .col-sm-2
    = appointment.date.strftime("%B %d, %Y")
  - if current_user.doctor?
    .col-sm-2
      = appointment.patient.first_name
      = appointment.patient.last_name
      ( Patient )
  - else
    .col-sm-2
      = appointment.doctor.first_name
      = appointment.doctor.last_name
      ( Doctor )
  .col-sm-2
    %span.label.label-success= appointment.status
  .col-sm-2= link_to image_tag("Show.png", class: 'icon'), appointment_path(appointment)
  .col-sm-2
    - if can? :update, appointment and appointment.status != 'cancelled'
    = link_to image_tag("Edit.png", class: 'icon'), edit_appointment_path(appointment)
  .col-sm-2
    = link_to appointment_path(appointment), method: :delete, data: {confirm: "Hey, Are you sure?"} do
      = image_tag("Delete.png", class: 'icon')
%br/
