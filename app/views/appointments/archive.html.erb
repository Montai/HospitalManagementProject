<h1 class="text" id="index_header">Archived Appointments</h1>
<% if @archives.blank? %>
  <p>No appointments found.</p>
<% else %>
<div class="container-fluid well" id="container_top_index">
    <div class="row">
      <div class="col-sm-2"><u><b>Date</b></u></div>
      <div class="col-sm-2"><u><b>Name</b></u></div>
      <div class="col-sm-2"><u><b>Status</b></u></div>
      <div class="col-sm-2"><u><b>Show</b></u></div>
    </div><br>
    <% @archives.each do |apps| %>
      <div class="row">
        <div class="col-sm-2"><%= apps.date.strftime("%B %d, %Y") %></div>
        <% if current_user.doctor? %>
          <div class="col-sm-2"><%= apps.patient.first_name %> <%= apps.patient.last_name %> ( Patient )</div>
        <% else %>
          <div class="col-sm-2"><%= apps.doctor.first_name %> <%= apps.doctor.last_name %> ( Doctor )</div>
        <% end %>
        <div class="col-sm-2"><span class="label label-success"><%= apps.status %></span></div>
        <div class="col-sm-2"><%= link_to image_tag("Show.png", size: '20x20'), appointment_path(apps) %></div>
      </div><br>
    <% end %>
<% end %>
<div class="pagination">
  <%= will_paginate @archives %>
</div>
</div>
