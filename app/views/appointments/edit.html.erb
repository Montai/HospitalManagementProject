<!DOCTYPE html>
<head>
  <link rel="stylesheet" type="text/css" href="mystyle.css">
</head>
<body>
 <% if current_user.patient? %>

    <h1>Update Appointment</h1>
    <%= render 'form' %>

 <% else %>

  <h1>Schedule Time</h1>

  <%= form_for (@appointment) do |f| %>

    <div class="div-table">
      <div class="tr">
        <div class="tc">
          <div class="field">
            <%= f.label :Date %><br />
            <%= f.datetime_select :date, start_year: 2018 %>
          </div>
        </div>

        <div class="tc">
          <div class="field">
            <%= f.label :Starting_Time %><br>
            <%= f.time_select :starting_time %>
          </div>
        </div>

        <div class="tc">
          <div class = "button">
            <%= f.submit %>
          </div>
        </div>
      </div>
    </div>

  <% end %>

<% end %>
</body>
