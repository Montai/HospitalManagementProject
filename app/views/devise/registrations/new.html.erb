<div id="sign_up_form">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, required: true, autofocus: true, class: "form-control", placeholder: "Enter first name" %>
        <% if @user.errors.any? %>
            <%= @user.errors.messages[:first_name].first if @user.errors.messages[:first_name].present? %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, required: true, autofocus: true, class: "form-control", placeholder: "Enter last name" %>
        <% if @user.errors.any? %>
            <%= @user.errors.messages[:last_name].first if @user.errors.messages[:last_name].present? %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :gender %><br/>
        <%= f.select(:gender, ['Male', 'Female'], {} , { :class => 'User' }) %>
      </div>

      <div class="form-group">
        <%= f.label :date_of_birth %><br />
        <%= f.date_field :date_of_birth, start_year: 1900, required: true %>
      </div>

      <div class="form-group">
        <%= f.label :role %><br />
        <%= f.select :role, User.roles.keys, {}, class: 'user-roles-select' %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", placeholder: "Enter e-mail" %>
        <% if @user.errors.any? %>
            <%= @user.errors.messages[:email].first if @user.errors.messages[:email].present? %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, required: true, autocomplete: "off",placeholder: "Enter password" %>
        <% if @user.errors.any? %>
            <%= @user.errors.messages[:password].first if @user.errors.messages[:password].present? %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, required: true, autocomplete: "off",placeholder: "Re-enter password" %>
        <% if @user.errors.any? %>
            <%= @user.errors.messages[:password_confirmation].first if @user.errors.messages[:password_confirmation].present? %>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", id: 'log_user' %>
      </div>
  <% end %>

</div>