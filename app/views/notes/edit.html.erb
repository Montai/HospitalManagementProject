<%= form_for([@appointment, @note]) do |f| %>
  <div class="field">
    <%= f.label :Description %><br><br>
    <%= f.text_area :description %>
    <% if @note.errors.any? %>
      <%= @note.errors.messages[:description].first if @note.errors.messages[:description].present? %>
    <% end %>
  </div>
  <div>
    <%= f.submit, class: "btn btn-success" %>
  </div>
<% end %>
<%= link_to 'Back', appointment_path(@appointment) %>
