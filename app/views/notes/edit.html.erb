
<%= form_for([@appointment, @note]) do |f| %>

  <div>
    <% if @note && @note.errors.any? %>
      <% @note.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :Description %><br><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', appointment_path(@appointment) %>
