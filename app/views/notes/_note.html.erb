
<div class="section-container">
  <div class="container">
    <div class="post-container">
      <div class="post-content">
        <h3 class="content-div">Note:</h3>
      </div>
      <div class="note-content"><%= note.description %><br></div>
      <h5>By:<%= "#{ note.user.first_name } on #{note.updated_at.strftime("%B %d, %Y")}" %></h5>
      <% if can? :update, note %>
      <%= link_to 'Delete', [note.appointment, note],
               method: :delete, class: "ui-button-delete", data: { confirm: 'Are you sure to delete?' } %> 
      <%= link_to 'Edit', edit_appointment_note_path(note.appointment, note), { class: "ui-button-edit" } %>
      <% end %>
    </div>
  </div>
</div>


