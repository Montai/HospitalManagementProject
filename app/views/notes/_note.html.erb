<div class="container">
  <div class="jumbotron">
    <div class="note-content"><b>Note:</b><%= note.description %><br></div>
    <h5><b>By:</b><%= "#{ note.user.first_name } on #{note.updated_at.strftime("%B %d, %Y")}" %></h5>
    <% if can? :update, note %>
    <%= link_to 'Delete', [note.appointment, note],
             method: :delete, class: "ui-button-delete", data: { confirm: 'Are you sure to delete?' }, class: "btn btn-danger" %>
    <%= link_to 'Edit', edit_appointment_note_path(note.appointment, note), { class: "btn btn-success" } %>
    <% end %>
  </div>
</div>
